<?xml version='1.0' encoding='utf-8'?>
<widget id="rocks.festify.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Festify</name>
    <description>
        Get your party started!
    </description>
    <author email="mail@getfestify.de" href="https://festify.rocks">
        Festify
    </author>
    <content src="app.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="www/images/manifest/icon-full-180.png" width="180" />
        <icon height="60" src="www/images/manifest/icon-full-60.png" width="60" />
        <icon height="120" src="www/images/manifest/icon-full-120.png" width="120" />
        <icon height="76" src="www/images/manifest/icon-full-76.png" width="76" />
        <icon height="152" src="www/images/manifest/icon-full-152.png" width="152" />
        <icon height="40" src="www/images/manifest/icon-full-40.png" width="40" />
        <icon height="80" src="www/images/manifest/icon-full-80.png" width="80" />
        <icon height="57" src="www/images/manifest/icon-full-57.png" width="57" />
        <icon height="114" src="www/images/manifest/icon-full-114.png" width="114" />
        <icon height="72" src="www/images/manifest/icon-full-72.png" width="72" />
        <icon height="144" src="www/images/manifest/icon-full-144.png" width="144" />
        <icon height="29" src="www/images/manifest/icon-full-29.png" width="29" />
        <icon height="58" src="www/images/manifest/icon-full-58.png" width="58" />
        <icon height="50" src="www/images/manifest/icon-full-50.png" width="50" />
        <icon height="100" src="www/images/manifest/icon-full-100.png" width="100" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundColor" value="0xff1c1f24" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#1c1f24" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="Orientation" value="portrait" />
    <splash src="www/images/Default@2x~universal~anyany.png" />
    <plugin name="de.fhg.fokus.famium.presentation" spec="https://github.com/fraunhoferfokus/cordova-plugin-presentation.git" />
    <plugin name="com.peerio.cordova.plugin.insomnia" spec="~4.2.0" />
    <engine name="ios" spec="~4.3.0" />
    <engine name="android" spec="~6.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.0" />
</widget>
